<p><%= notice %></p>

<h1>Posts</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.title %></td>
                <td><%= post.content %></td>
                <td><%= link_to('Show', post) %></td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        <% end %>
    </tbody>
</table>